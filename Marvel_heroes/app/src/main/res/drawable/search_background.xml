<?xml version="1.0" encoding="utf-8"?>
<!-- 
  Search view background drawable
  Provides a clean, bordered look for the search input field
  Uses rounded corners and a light border for visual definition
-->
<shape 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- White background for the search field -->
    <solid android:color="#FFFFFF" />
    <!-- Rounded corners for a modern look -->
    <corners android:radius="8dp" />
    <!-- Light gray border for visual definition -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD" />
</shape>